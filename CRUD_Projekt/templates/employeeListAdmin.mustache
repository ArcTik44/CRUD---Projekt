<a href = "User.php" class="btn btn-primary mt-3">Zpět na účet</a>
<table class="table table-striped roomList">
    <thead>
    <tr>
        <th>Jméno</th>
        <th>Pozice</th>
        <th>Místnost</th>
        <th>Akce</th>
    </tr>
    </thead>
    <tbody>
    {{# employees }}
        <tr>
            <td><a href="{{employeeDetail}}?employee_id={{ employee_id }}">{{ name }} {{surname}}</a></td>
