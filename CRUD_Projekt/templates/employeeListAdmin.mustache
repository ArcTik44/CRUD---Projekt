            <td>
                <a href="updateEmployee.php?employee_id={{ employee_id }}" class="btn btn-primary">Změnit</a>
                <form action="deleteEmployee.php" method="post" class="form-inline" onsubmit="return confirm('Skutečně smazat?\nAkce je nevratná!');">
