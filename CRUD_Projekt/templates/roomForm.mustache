{{#create}}<h1>Nová místnost</h1>{{/create}}
{{#update}}<h1>Upravit místnost</h1>{{/update}}
<form method="post">
    {{#room}}
    <div class="mb-3">
        <label for="name">Název</label>
        <input type="text" name="name" id="name" value="{{name}}" required class="form-control">
        {{#errors.name}}<small class="text-warning">{{errors.name}}</small>{{/errors.name}}
    </div>
    <div class="mb-3">
        <label for="no">Číslo</label>
        <input type="text" name="no" id="no" value="{{no}}" required class="form-control">
        {{#errors.no}}<small class="text-warning">{{errors.no}}</small>{{/errors.no}}
    </div>
    <div class="mb-3">
        <label for="phone">Tel.</label>
        <input type="text" name="phone" id="phone" value="{{phone}}" class="form-control">
        {{#errors.phone}}<small class="text-warning">{{errors.phone}}</small>{{/errors.phone}}
    </div>
    <div class="mb-3">
        {{#create}}
        <input type="hidden" name="action" value="create">
        <input type="hidden" name="room_id" value="{{room_id}}">
        <input type="submit" value="Vytvořit" class="btn btn-primary">
        {{/create}}
        {{^update}}
            <input type="hidden" name="action" value="update">
            <input type="hidden" name="room_id" value="{{room_id}}">
            <input type="submit" value="Upravit" class="btn btn-primary">
        {{/update}}
    </div>
    {{/room}}
</form>
<a href = 'roomsAdmin.php' class="btn btn-primary mt-3">Seznam místností</a>